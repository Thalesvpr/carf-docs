{
  "clientId": "admin",
  "name": "ADMIN - Frontend Administrativo",
  "description": "Console de administração Next.js para gestão de tenants e usuários",
  "enabled": true,
  "publicClient": true,
  "standardFlowEnabled": true,
  "implicitFlowEnabled": false,
  "directAccessGrantsEnabled": false,
  "redirectUris": [
    "http://localhost:3000/*",
    "https://admin.carf.example.com/*"
  ],
  "webOrigins": ["+"],
  "attributes": {
    "pkce.code.challenge.method": "S256",
    "post.logout.redirect.uris": "+"
  },
  "defaultClientScopes": ["openid", "profile", "email", "roles", "carf-tenant"],
  "optionalClientScopes": ["offline_access"],
  "clientRoles": [
    "manage-users",
    "manage-tenants",
    "view-audit-logs"
  ]
}
